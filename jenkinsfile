pipeline {
    agent {label "v"}
    stages {
        stage('GIT') {
            steps {
                echo 'github';
                git branch:'main',
                    url: 'https://github.com/NizarBHEsprit/Docker_TP_Achat.git',
                    credentialsId: 'agent_devops_1';
            }
        }
        stage('sonar') {
            steps {
                sh "mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=root";
            }
        }
        stage('unit test') {
            steps {
                sh "mvn clean test -Ptest";
            }
        }
        stage('ls before build') {
            steps {
                sh "ls";
            }
        }
        stage('build package') {
            steps {
                sh "mvn clean package -Pprod";
            }
        }
        stage('ls after build') {
            steps {
                sh "ls";
            }
        }
    }
}
