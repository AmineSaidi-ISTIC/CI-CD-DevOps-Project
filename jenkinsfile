pipeline {
    agent {label "agent_final_1"}
    stages {
        stage('GIT') {
            steps {
                echo 'github';
                git branch:'main',
                    url: 'https://github.com/NizarBHEsprit/Docker_TP_Achat.git',
                    credentialsId: 'agent_devops_1';
            }
        }
        // stage('sonar') {
        //     steps {
        //         sh "mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=nizar";
        //     }
        // }
        // stage('unit test') {
